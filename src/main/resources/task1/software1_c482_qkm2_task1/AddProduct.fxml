         <columns>
            <TableColumn fx:id="partID_allParts" prefWidth="75.0" text="Part ID"/>
            <TableColumn fx:id="partName_allParts" prefWidth="75.0" text="Part Name"/>
            <TableColumn fx:id="invLevel_allParts" prefWidth="104.0" text="Inventory Level"/>
            <TableColumn fx:id="priceCostPerUnit_allParts" prefWidth="169.0" text="Price/ Cost per Unit"/>
         </columns>
      </TableView>
      <TableView fx:id="association_addProduct" layoutX="530.0" layoutY="314.0" prefHeight="200.0" prefWidth="429.0">
         <columns>
            <TableColumn fx:id="partID_associated" prefWidth="75.0" text="Part ID"/>
            <TableColumn fx:id="partName_associated" prefWidth="75.0" text="Part Name"/>
            <TableColumn fx:id="invLevel_associated" prefWidth="104.0" text="Inventory Level"/>
            <TableColumn fx:id="priceCostPerUnit_associated" prefWidth="169.0" text="Price/ Cost per Unit"/>
         </columns>
      </TableView>
      <Button fx:id="addAssociation_addProduct" layoutX="862.0" layoutY="263.0" mnemonicParsing="false"
              onAction="#onAddAssociationClick" prefHeight="25.0" prefWidth="45.0" text="Add"/>
      <Button fx:id="removeAssociation_addProduct" layoutX="763.0" layoutY="528.0" mnemonicParsing="false"
              onAction="#onRemoveAssociationClick" text="Remove Associated Part"/>
      <Button fx:id="cancel_addProduct" layoutX="852.0" layoutY="577.0" mnemonicParsing="false"
              onAction="#onCancelClick" prefHeight="25.0" prefWidth="54.0" text="Cancel"/>
      <Button fx:id="save_addProduct" layoutX="763.0" layoutY="577.0" mnemonicParsing="false" onAction="#onSaveClick"
              prefHeight="25.0" prefWidth="54.0" text="Save"/>
